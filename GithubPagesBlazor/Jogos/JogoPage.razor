@page "/jogos"

<PageTitle>Jogos</PageTitle>

<h2>Jogos</h2>

<RadzenDataGrid AllowFiltering="true" FilterPopupRenderMode="PopupRenderMode.OnDemand" AllowPaging="true" PageSize="30" AllowSorting="true"
                Data="@jogos" TItem="Jogo" style="--rz-grid-header-text-transform: none; --rz-grid-header-font-size: 15px;">
    <Columns>
        <RadzenDataGridColumn Width="10px" TItem="Jogo" Property="formatedData" Title="Data" Filterable="false" Sortable="false" TextAlign="TextAlign.Left" />
        <RadzenDataGridColumn Width="10px" TItem="Jogo" Property="Time_Vencedor" Title="Vencedor" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn Width="10px" TItem="Jogo" Property="Placar_Branco" Title="Placar Branco" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn Width="10px" TItem="Jogo" Property="Placar_Preto" Title="Placar Preto" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" />
    </Columns>
</RadzenDataGrid>

